<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>PhoneBook on Servlets</display-name>

  <servlet>
    <servlet-name>AddContactsServlet</servlet-name>
    <servlet-class>ru.academits.nekrasovgleb.servlet.AddContactServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>DeleteContactsServlet</servlet-name>
    <servlet-class>ru.academits.nekrasovgleb.servlet.DeleteContactsServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>StartServlet</servlet-name>
    <servlet-class>ru.academits.nekrasovgleb.servlet.StartServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AddContactsServlet</servlet-name>
    <url-pattern>/add</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>StartServlet</servlet-name>
    <url-pattern>/phonebook</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>DeleteContactsServlet</servlet-name>
    <url-pattern>/delete</url-pattern>
  </servlet-mapping>
</web-app>
